#######################################################################
# Fern's Dotfiles -- Git Version Control
# https://github.com/fernzi/dotfiles
#######################################################################

[core]
	autocrlf = input

[init]
	defaultBranch = master

[diff]
	algorithm = histogram

[alias]
	br = branch
	cl = clone
	cm = commit
	co = checkout
	curr = show --stat HEAD
	df = diff
	dfh = diff @~ @
	dfs = diff --staged
	killit = reset --hard
	ls-untracked = ls-files --exclude-standard --others
	st = status -s
	us = restore --staged

[url "git@github.com:"]
	insteadOf = gh:

[url "git@gitlab.com:"]
	insteadOf = gl:

[url "ssh://git@codeberg.org/"]
	insteadOf = cb:

[include]
	path = local
